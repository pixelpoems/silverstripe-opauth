{
	"name": "betterbrief/silverstripe-opauth",
    "type": "silverstripe-vendormodule",
	"description": "SilverStripe 4.x OpAuth module. See: http://opauth.org/ SilverStripe 4x Update by a pixelpoems fork",
	"keywords": ["silverstripe", "social", "opauth", "oauth", "login"],
	"homepage": "https://github.com/BetterBrief/silverstripe-opauth",
	"license": "BSD",
	"authors": [
		{
			"name": "Will Morgan",
			"homepage": "http://twitter.com/willmorgan",
			"role": "Lead Developer"
		},
		{
			"name": "Dan Hensby",
			"homepage": "https://github.com/dhensby",
			"role": "Code Scrutinizer"
		}
	],
	"require": {
		"silverstripe/framework": "~4.12",
		"opauth/opauth": "~0.4.5",
        "ext-http": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "~3.7"
	},
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/dhensby/opauth"
        }
    ],
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"silverstripe/vendor-plugin": true
		}
	},
    "prefer-stable": true,
    "minimum-stability": "dev"
}
